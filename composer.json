{
    "name": "thomasvargiu/rabbitmq-module",
    "description": "Integrates php-amqplib with Zend Framework 2 and RabbitMq",
    "type": "library",
    "minimum-stability": "stable",
    "license": "MIT",
    "homepage": "https://github.com/thomasvargiu/RabbitMqModule",
    "keywords": [
        "zf2",
        "zend framework",
        "laminas",
        "mezzio",
        "rabbitmq",
        "amqp"
    ],
    "authors": [
        {
            "name": "Thomas Vargiu",
            "email": "tommy@ttech.it"
        }
    ],
    "require": {
        "php": "^7.3 || ~8.0.0",
        "psr/container": "^1.0",
        "container-interop/container-interop": "^1.2",
        "php-amqplib/php-amqplib": "^3.0.0",
        "laminas/laminas-stdlib": "^3.3.0",
        "laminas/laminas-servicemanager": "^3.6.0",
        "laminas/laminas-modulemanager": "^2.10.0",
        "laminas/laminas-mvc": "^3.3",
        "laminas/laminas-cli": "^1.0",
        "laminas/laminas-serializer": "^2.10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "friendsofphp/php-cs-fixer": "^v2.17.0",
        "phpstan/extension-installer": "^1.0.5",
        "phpstan/phpstan": "^1.0.0",
        "phpstan/phpstan-phpunit": "^1.0.0",
        "jangregor/phpstan-prophecy": "^1.0.0",
        "phpspec/prophecy": "^1.12.0",
        "phpspec/prophecy-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "RabbitMqModule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RabbitMqModule\\": "tests/unit/"
        }
    },
    "extra": {
        "laminas": {
            "module": "RabbitMqModule"
        }
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@cs-check"
        ],
        "ci-test": [
            "@ci-phpunit",
            "@cs-check"
        ],
        "phpstan": "phpstan analyze",
        "phpunit": "phpunit",
        "ci-phpunit": "phpunit --coverage-clover=coverage.clover",
        "cs-check": "php-cs-fixer fix --dry-run --diff --allow-risky yes",
        "cs-fix": "php-cs-fixer fix --diff"
    }
}
